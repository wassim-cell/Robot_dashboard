  gradientStroke.addColorStop(0, 'rgba(119,52,169,0)'); //purple colors
  
const myChart = new Chart(ctx, {
  type: 'line',
  data: {
      labels: ['-15','-30', '-45', '-60', '-75', '-90', '-105','-120'],
      datasets: [{
          label: 'Temperature ',
          data: labelsData ,
          backgroundColor: gradientStroke ,
          borderColor: [
              'rgba(255, 99, 132, 1)',
